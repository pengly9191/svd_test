TARGET = test

#
OBJS = main.o Point_cloud_generation.o Laser_segmentation.o Utils.o
CXX ?= g++

CXXFLAGS += -c -Wall $(shell pkg-config --cflags opencv) -I/usr/include/opencv2/ -Iinclude/
LDFLAGS += $(shell pkg-config --libs --static opencv)

all: $(TARGET)

$(TARGET):$(OBJS)
	$(CXX) $(OBJS) -o $@ $(LDFLAGS)

%.o: %.cpp
	$(CXX) $< -o $@ $(CXXFLAGS)
	

clean: ; rm -f $(TARGET)  $(OBJS) *~ ./include/*~ *.ply


